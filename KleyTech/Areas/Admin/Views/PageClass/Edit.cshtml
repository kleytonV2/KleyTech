@model KleyTech.Models.PageClass

@{
    ViewData["Title"] = "Edit page";
}

<br />
<br />

<h3 class="text-center">Edit page</h3>

<form asp-action="Edit" enctype="multipart/form-data">

    <input type="hidden" asp-for="Id" />

    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8 mt-4">

            <div class="row">
                <div class="col-8">
                    <div class="form-group row">
                        <label class="col-4">
                            <label asp-for="Name"></label>
                        </label>
                        <input asp-for="Name" class="form-control" placeholder="Set the name of the page" />
                        <span asp-validation-for="Name" class="text-danger" />
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-check form-switch">
                        <label class="form-check-label">
                            <label asp-for="Status"></label>
                        </label>
                        <input type="checkbox" asp-for="Status" class="form-check-input form-switch me-2" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group row">
                    <label class="col-4">
                        <label asp-for="Description"></label>
                    </label>
                    <input asp-for="Description" class="form-control" placeholder="Set the description of the page" />
                    <span asp-validation-for="Description" class="text-danger" />
                </div>
            </div>

            <div class="form-group row mt-4">
                <div class="col">
                    <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.Id">Update</button>
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-success form-control">Return</a>
                </div>
            </div>

        </div>

    </div>

